.row
  .col-md-4.col-md-offset-4
    = form_for([@post, @post.comments.build],remote: true) do |f|
      .form-group
        = f.label :commenter
        %br
        = f.text_field :commenter, class:"form-control"

      .form-group
        = f.label :body
        %br
        = f.text_area :body, class:"form-control"

      .form-group
        = f.submit class:"btn btn-primary"
