<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "Sample app", "#" , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.name%>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <%p current_user %>
            <li> <%= link_to t(:settings), edit_user_registration_path(current_user) %></li>
          </ul>
          <li class="divider">
            <li>
              <%= link_to t(:logout), destroy_user_session_path , method: "delete" %>
            </li>
          </li>
        </li>
        <li> <%= link_to t(:title,scope:[:posts,:index]), posts_path %></li>
        <% else %>
          <li><%= link_to t(:login), new_user_session_path %></li>
        <% end %>
        </ul>
    </nav>
    <div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  </div>
</header>